{% include 'Product/partials/' ~ product.category ~ '/products/' ~ product.slug ~ '.twig' %}

{% if product.slug != 'envelopes' %}

{% if product.name != 'Snapchat Geofilter' %}
<div class="field">
    <label for="company-name">{% if product.name != 'Resume Design' %}Company {% else %}Your{% endif %}{% if product.name == 'Tshirt Design' %} / Organization / Team{% endif %} Name</label>
    <input type="text" name="company-name">            
</div>

{% if product.name != 'Resume Design' %}
    <div class="field">
        <label for="company-website">{% if product.name != 'Tshirt Design' %}Company{% endif %} Website <small>optional</small></label>
        <input type="text" name="company-website">        
    </div>

    {% if product.name == 'Tshirt Design' %}
        <div class="field">
            <label for="description">Briefly Describe Company / Organization / Team <small>(i.e Charity, Softball Team, Roofing Company)</small></label>
            <input type="text" name="describe">
        </div>
        
        {% else %}

        <div class="field">
            <label for="description">Briefly describe your business <small>(i.e Products, Services, Industry)</small></label>
            <input type="text" name="describe">
        </div>

    {% endif %}
{% endif %}
{% endif %}

{% if product.slug == 'logo-design' or product.slug == 'essentials-package' %}
    {% include 'Product/partials/design/logo.twig' %}
{% endif %}

<div class="field is-inline">
    <label>Typography <small>you can select more than one</small></label>
    <div>
        <label><input type="checkbox" name="typography[]" value="script"><img src="/assets/img/products/design/typography/script.jpg" alt="script"></label>
        <label><input type="checkbox" name="typography[]" value="serif"><img src="/assets/img/products/design/typography/serif.jpg" alt="serif"></label>
        <label><input type="checkbox" name="typography[]" value="sans-serif"><img src="/assets/img/products/design/typography/sans-serif.jpg" alt="sans-serif"></label>
        <label><input type="checkbox" name="typography[]" value="slab"><img src="/assets/img/products/design/typography/slab.jpg" alt="slab"></label>
        <label><input type="checkbox" name="typography[]" value="mono"><img src="/assets/img/products/design/typography/mono.jpg" alt="mono"></label>
        <label><input type="checkbox" name="typography[]" value="hand"><img src="/assets/img/products/design/typography/hand.jpg" alt="hand"></label>
        <label><input type="checkbox" name="typography[]" value="decorative"><img src="/assets/img/products/design/typography/decorative.jpg" alt="decorative"></label>
        <label><input type="checkbox" name="typography[]" value="modern"><img src="/assets/img/products/design/typography/modern.jpg" alt="modern"></label>
        <label><input type="checkbox" name="typography[]" value="retro"><img src="/assets/img/products/design/typography/retro.jpg" alt="retro"></label>
    </div>
</div>

<div class="field">
    <label for="colours-textures">Colours and Textures <small>i.e. Blue & Gold or Red, Black, Yellow</small></label>
    <input type="text" name="colours-textures">        
</div>

<div class="field"><label>Describe the look you're going for<small>(you can choose more than one)</small></label></div>
<div class="field is-columns is-inline">
    {% include 'Product/partials/design/description.twig' %}
</div>

<div class="field">
    <label for="themes-images">Themes and Images <small>i.e Coffe Beans, Mountains, Winter Time (you can select more than one)</small></label>
    <input type="text" name="themes-images">       
</div>

{% if product.slug == 'startup-package' or product.slug == 'pro-package' %}

<h4><strong>Step 2</strong> - Website</h4>
<hr>

<div class="field is-inline is-flexed">
    Do you already have a domain name? 
    <label><input type="radio" name="has-domain" value="yes"> Yes</label>
    <label><input type="radio" name="has-domain" value="no"> No</label>
</div>

<div class="field">
    <label for="domain-name">What is your domain name? <small>(or the one you'd like.)</small></label>
    <input type="text" name="domain-name">
</div>

<div class="field">
    <label for="custom-email">Will you need custom email addresses?<strong> (+$139 per email address/year)</strong></label>
    <select name="option[10]custom-email">
        <option value="no" selected>No</option>
        <option value="custom-email" >1</option>
        <option value="custom-email-2" >2</option>
        <option value="custom-email-3" >3</option>
        <option value="custom-email-4" >4</option>
        <option value="custom-email-5" >5</option>
    </select>
</div>

<p><strong>You can select up to 5 of the following {% if product.slug == 'pro-package' %}pages {% else %}content sections.{% endif %}</strong></p>
<p>Navigation Menu, Header, and Footer are included.</p>

<div class="field is-columns is-inline">
    {% include 'Product/partials/web/layout.twig' %}
</div>

<h4><strong>Step 3</strong> - Features</h4>
<hr>

{% include 'Product/partials/web/popovers.twig' %}

<h4><strong>Step 4</strong> - Content</h4>
<hr>

<p>Unless you selected our Copywriting Feature, you are responsible for providing all of the website copy / content. <br>
You can send us this later if you don’t have it yet.</p>

<div class="field">
        <label for="keywords">Search Keywords <small>optional - if more than one separate by commas</small></label>
        <input type="text" name="keywords" placeholder="What keywords describe your business or website?">
    </div>

{% endif %}

<div class="field">
    {% if product.name == 'Logo Design' %}
        <label for="content">Logo Design Description <small>(briefly describe what you're looking for)</small></label>
    {% elseif product.name == 'Business Card Design' %}
        <label for="content">Business Card Content <small>i.e. Contact Information, Name, Job Titles etc.</small></label>
    {% elseif product.name == 'Tshirt Design' %}
        <label for="content">Tshirt Design Description <small>(briefly describe what you're looking for)</small></label>
    {% elseif product.name == 'Resume Design' %}
        <label for="content">Additional Content<small>i.e. New title, certifications, etc. - optional</small></label>
    {% elseif product.name == 'Essentials Package' %}
        <label for="content">Content + Instructions <small>Tell us a little more about what you would like to see</small></label>
    {% elseif product.name == 'Snapchat Geofilter' %}
        <label for="content">Content <small>Tell us a little more about what you would like to see</small></label>
    {% elseif product.name == 'Startup Package' or product.name == 'Pro Package' %}
        <label for="description">Website Content <small>i.e. title, specials, services, photos, etc.</small></label>
    {% else %}
        <label for="content">{{ product.name }} Content <small>i.e. title, specials, services, photos, etc.</small></label>
    {% endif %}
    
    <textarea name="content"></textarea>
</div>

<div class="field">
    <label for="files">
        {% if product.slug == 'essentials-package' %}Uploads <small>i.e Examples, Descriptions, Services etc</small>{% elseif product.name == 'Resume Design'%}Current/ Old Resume{% else %} Content Files{% endif %}
        <span class="image-zone"></span>
        <input type="file" name="files[]" id="files" multiple>
    </label>
</div>

{% if product.slug != 'essentials-package' %}
    <div class="field">
        <label for="images">
            {% if product.name == 'Resume Design' %}
                Head Shot <small>optional</small>
            {% else %}
                Images
            {% endif %}
            <span class="image-zone"></span>
            <input type="file" name="images[]" id="images" multiple>
        </label>
    </div>
{% endif %}

{% if product.name == 'Tshirt Design' %}
    <div class="tshirt-callout">
        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 32 32" xml:space="preserve" width="32" height="32"><g class="nc-icon-wrapper" fill="#444444"><path fill="#444444" d="M30.3,5.9l-4.2-4.2c-1.1-1.1-3.1-1.1-4.2,0L2.3,21.3c-0.1,0.1-0.2,0.2-0.2,0.3c0,0,0,0.1,0,0.1 c0,0.1,0,0.1,0,0.2l-1,8c0,0.3,0.1,0.6,0.3,0.8C1.5,30.9,1.7,31,2,31c0,0,0.1,0,0.1,0l8-1c0.1,0,0.1,0,0.2,0c0,0,0.1,0,0.1,0 c0.1,0,0.2-0.1,0.3-0.2l19.6-19.6C31.5,9,31.5,7,30.3,5.9z M25,12.6L19.4,7L21,5.4l5.6,5.6L25,12.6z M10,27.6l-2.1-2.1l13.6-13.6 l2.1,2.1L10,27.6z M18,8.4l2.1,2.1L6.5,24.1L4.4,22L18,8.4z"></path></g></svg>
        <strong>Design Only</strong> - T-Shirt printing currently not available
    </div>
{% endif %}

{% if product.printable %}
<div class="field print-confirm">
    <label for="print-confirm">Do you need this printed?</label>
    <input type="checkbox" name="print-confirm">Yes
</div>

<div class="print-details">
    {% include 'Product/partials/' ~ product.category ~ '/details/' ~ product.slug ~ '.twig' %}
</div>
{% endif %}

{% if product.slug == 'essentials-package' %}
<p><strong>This should help us get started. We may ask for more information later.</strong></p>
{% endif %}

{% if product.slug != 'essentials-package' %}
<div class="field">
    <label for="instructions">Additional Instructions</label>
    <textarea name="instructions"></textarea>
</div>
{% endif %}

{% endif %}
