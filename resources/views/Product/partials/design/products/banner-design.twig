<div class="field design-size">
    <label>What size do you need? <small>(feet)</small></label>

    <select name="size">
        <option value="default" disabled selected>Select</option>
        <option value="banner-2x4">2'x4'</option>
        <option value="banner-3x5">3'x5'</option>
        <option value="banner-4x6">4'x6'</option>
        <option value="banner-3x8">3'x8'</option>
        <option value="banner-4x10">4'x10'</option>
        <option value="Other">Other (Specify in instructions)</option>
        <option value="Does not know">I don't know</option>
    </select>
</div>

<div class="field radio design-orientation">
    <label>Orientation</label>
    <div>
        <div>
            <img src="/assets/img/products/design/orientation/portrait.svg" draggable="false">
            <label class="radio"><input type="radio" name="orientation" value="portrait"><span class="radio-button"></span></label>
            Portrait
        </div>
        <div>
            <img src="/assets/img/products/design/orientation/landscape.svg" draggable="false">
            <label class="radio"><input type="radio" name="orientation" value="landscape"><span class="radio-button"></span></label>
            Landscape
        </div>
    </div>
</div>
