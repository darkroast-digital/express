<!-- End Details -->

<div class="field radio design-orientation is-line">
    <label>Size Options</label>
    <div>
        <div>
            <img src="/assets/img/products/design/orientation/landscape.svg" draggable="false">
            5"x7" Post Card<br>
            <small>(A7 Flat Postcard)</small>
        </div>
        <div>
            <img src="/assets/img/products/design/orientation/pages.svg" draggable="false">
            5"x7" Folded Card<br>
            <small>(10#x7" Folded Postcard)</small>
        </div>
    </div>
</div>

<div class="field print-detail">
    <label>Quantity</label>
    <select name="option[0]quantity" required>
        <optgroup label="5x7">
            <option value="5x7-greeting-card-50-matte-gloss" data-price="199">50</option>
            <option value="5x7-greeting-card-100-matte-gloss" data-price="229">100</option>
            <option value="5x7-greeting-card-250-matte-gloss" data-price="269">250</option>
            <option value="5x7-greeting-card-500-matte-gloss" data-price="299">500</option>
        </optgroup>
        <optgroup label="5x7 Pearl">
            <option value="5x7-greeting-card-50-pearl" data-price="229">50</option>
            <option value="5x7-greeting-card-100-pearl" data-price="335">100</option>
            <option value="5x7-greeting-card-250-pearl" data-price="389">250</option>
            <option value="5x7-greeting-card-500-pearl" data-price="449">500</option>
        </optgroup>
        <optgroup label="5x7 Folded Matte/Gloss">
            <option value="5x7-greeting-card-folded-50-matte-gloss" data-price="309">50</option>
            <option value="5x7-greeting-card-folded-100-matte-gloss" data-price="369">100</option>
            <option value="5x7-greeting-card-folded-250-matte-gloss" data-price="475">250</option>
            <option value="5x7-greeting-card-folded-500-matte-gloss" data-price="549">500</option>
        </optgroup>
        <optgroup label="5x7 Folded Pearl">
            <option value="5x7-greeting-card-folded-50-pearl" data-price="375">50</option>
            <option value="5x7-greeting-card-folded-100-pearl" data-price="459">100</option>
            <option value="5x7-greeting-card-folded-250-pearl" data-price="595">250</option>
            <option value="5x7-greeting-card-folded-500-pearl" data-price="665">500</option>
        </optgroup>
    </select>

    <div class="cost-of-option">
        <hr>
        <p><strong>Total <small>(Design + Print)</small> : </strong> $<span class="price" data-price="{{ product.price }}">{{ product.display_price }}</span></p>
    </div>
</div>

<div class="field is-inline">
    <label>Where will it be used?</label>
    <div>
        <label><input type="checkbox" name="card-for[]" value="thank-you">Thank You</label>
        <label><input type="checkbox" name="card-for[]" value="announcement">Announcement</label>
        <label><input type="checkbox" name="card-for[]" value="christmas">Christmas</label>
        <label><input type="checkbox" name="card-for[]" value="invitation">Invitation</label>
        <label><input type="checkbox" name="card-for[]" value="other">Other <small>(Specifiy in instructions)</small></label>
    </div>
</div>
