<ul class="product-details">
    <li><img src="/assets/img/designs.svg" draggable="false"> {{ product.details.one }}</li>
    <li><img src="/assets/img/revisions.svg" draggable="false"> {{ product.details.two }}</li>
    <li><img src="/assets/img/movie.svg" draggable="false"> {{ product.details.three }}</li>
    <li><img src="/assets/img/sound.svg" draggable="false"> {{ product.details.four }}</li>
    <li><img src="/assets/img/satisfaction.svg" draggable="false"> {{ product.details.five }}</li>
</ul>

<!-- End Details -->

<div class="field is-inline">
    <label>Where will it be used?</label>
    <div>
        <label><input type="checkbox" name="platform" value="facebook"><img src="/assets/img/products/design/socials/facebook.svg" alt="facebook"></label>
        <label><input type="checkbox" name="platform" value="instagram"><img src="/assets/img/products/design/socials/instagram.svg" alt="instagram"></label>
        <label><input type="checkbox" name="platform" value="snapchat"><img src="/assets/img/products/design/socials/snapchat.svg" alt="linkedin"></label>
        <label><input type="checkbox" name="platform" value="website"><img src="/assets/img/products/design/socials/website.svg" alt="website"></label>
        <label><input type="checkbox" name="platform" value="other"><img src="/assets/img/products/design/socials/other.svg" alt="other"></label>
    </div>
</div>

<div class="field is-inline">
    <label>What will it be used for?</label>
    <div>
        <label class="radio"><input type="radio" name="use" value="post"><span class="radio-button"></span> Post</label>
        <label class="radio"><input type="radio" name="use" value="ad"><span class="radio-button"></span> Ad</label>
        <label class="radio"><input type="radio" name="use" value="story"><span class="radio-button"></span> Story</label>
        <label class="radio"><input type="radio" name="use" value="other"><span class="radio-button"></span> Other <small> (specify in instructions)</small></label>
    </div>
</div>

<div class="field radio design-orientation is-line">
    <label>Aspect Ratio</label>
    <div>
        <div>
            <img src="/assets/img/products/design/orientation/landscape.svg" draggable="false">
            <label class="radio"><input type="radio" name="ratio" value="9:16"><span class="radio-button"></span></label>
            16:9
        </div>
        <div>
            <img src="/assets/img/products/design/orientation/portrait.svg" draggable="false">
            <label class="radio"><input type="radio" name="ratio" value="16:9"><span class="radio-button"></span></label>
            9:16
        </div>
        <div>
            <img src="/assets/img/products/design/orientation/square.svg" draggable="false">
            <label class="radio"><input type="radio" name="ratio" value="1:1"><span class="radio-button"></span></label>
            1:1
        </div>
        <div>
            <img src="/assets/img/products/design/orientation/other.svg" draggable="false">
            <label class="radio"><input type="radio" name="ratio" value="does not know"><span class="radio-button"></span></label>
            I don't know
        </div>
    </div>
</div>
