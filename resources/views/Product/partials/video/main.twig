{% include 'Product/partials/' ~ product.category ~ '/products/' ~ product.slug ~ '.twig' %}

<div class="field is-inline">
    <label>Where will it be used?</label>
    <div>
        <label><input type="checkbox" name="platform" value="facebook"><img src="/assets/img/products/design/socials/facebook.svg" alt="facebook"></label>
        <label><input type="checkbox" name="platform" value="instagram"><img src="/assets/img/products/design/socials/instagram.svg" alt="instagram"></label>
        <label><input type="checkbox" name="platform" value="snapchat"><img src="/assets/img/products/design/socials/snapchat.svg" alt="linkedin"></label>
        <label><input type="checkbox" name="platform" value="website"><img src="/assets/img/products/design/socials/website.svg" alt="website"></label>
        <label><input type="checkbox" name="platform" value="other"><img src="/assets/img/products/design/socials/other.svg" alt="other"></label>
    </div>
</div>

<div class="field is-inline">
    <label>What will it be used for?</label>
    <div>
        <label class="radio"><input type="radio" name="use" value="post"><span class="radio-button"></span> Post</label>
        <label class="radio"><input type="radio" name="use" value="ad"><span class="radio-button"></span> Ad</label>
        <label class="radio"><input type="radio" name="use" value="story"><span class="radio-button"></span> Story</label>
        <label class="radio"><input type="radio" name="use" value="other"><span class="radio-button"></span> Other <small> (specify in instructions)</small></label>
    </div>
</div>

<div class="field radio design-orientation is-line">
    <label>Aspect Ratio</label>
    <div>
        <div>
            <img src="/assets/img/products/design/orientation/landscape.svg" draggable="false">
            <label class="radio"><input type="radio" name="ratio" value="9:16"><span class="radio-button"></span></label>
            16:9
        </div>
        <div>
            <img src="/assets/img/products/design/orientation/portrait.svg" draggable="false">
            <label class="radio"><input type="radio" name="ratio" value="16:9"><span class="radio-button"></span></label>
            9:16
        </div>
        <div>
            <img src="/assets/img/products/design/orientation/square.svg" draggable="false">
            <label class="radio"><input type="radio" name="ratio" value="1:1"><span class="radio-button"></span></label>
            1:1
        </div>
        <div>
            <img src="/assets/img/products/design/orientation/other.svg" draggable="false">
            <label class="radio"><input type="radio" name="ratio" value="does not know"><span class="radio-button"></span></label>
            I don't know
        </div>
    </div>
</div>

<div class="field">
    <label for="company-name">Company Name</label>
    <input type="text" name="company-name">            
</div>

<div class="field">
    <label for="use-where">Links to Social Media Page where it will be used (or Website) <small>optional - if more than one separate by commas</small></label>
    <input type="text" name="use-where">        
</div>

<div class="field">
    <label for="">Describe Your Business <small>i.e. industry, services, products</small></label>
    <input type="text" name="">       
</div>

<div class="field is-inline">
    <label>Typography <small>you can select more than one</small></label>
    <div>
        <label><input type="checkbox" name="typography" value="script"><img src="/assets/img/products/design/typography/script.jpg" alt="script"></label>
        <label><input type="checkbox" name="typography" value="serif"><img src="/assets/img/products/design/typography/serif.jpg" alt="serif"></label>
        <label><input type="checkbox" name="typography" value="sans-serif"><img src="/assets/img/products/design/typography/sans-serif.jpg" alt="sans-serif"></label>
        <label><input type="checkbox" name="typography" value="slab"><img src="/assets/img/products/design/typography/slab.jpg" alt="slab"></label>
        <label><input type="checkbox" name="typography" value="mono"><img src="/assets/img/products/design/typography/mono.jpg" alt="mono"></label>
        <label><input type="checkbox" name="typography" value="hand"><img src="/assets/img/products/design/typography/hand.jpg" alt="hand"></label>
        <label><input type="checkbox" name="typography" value="decorative"><img src="/assets/img/products/design/typography/decorative.jpg" alt="decorative"></label>
        <label><input type="checkbox" name="typography" value="modern"><img src="/assets/img/products/design/typography/modern.jpg" alt="modern"></label>
        <label><input type="checkbox" name="typography" value="retro"><img src="/assets/img/products/design/typography/retro.jpg" alt="retro"></label>
    </div>
</div>

<div class="field">
    <label for="">Colours and Textures <small>i.e. Blue& Gold or Red, Black, Yellow</small></label>
    <input type="text" name="">        
</div>

<div class="field"><label>What best describes what you're looking for? <small>(you can choose more than one)</small></label></div>
<div class="field is-columns is-inline">
    {% include 'Product/partials/design/description.twig' %}
</div>

<div class="field">
    <label for="">Themes and Images <small>you can select more than one</small></label>
    <input type="text" name="">       
</div>

<div class="field">
    <label for="files">
        Content Files
        <span class="image-zone"></span>
        <input type="file" name="files[]" id="files">
    </label>
</div>

<div class="field">
    <label for="images">
        Images + Videos
        <span style="display:inline-block; background:#F7F9FB; padding: .25rem; margin-bottom: 1rem">If you do not have video clips for us to work with, it won't be a prolem. We will imporvise with stock video, custom animations and effects.</span>
        <span class="image-zone"></span>
        <input type="file" name="images[]" id="images">
    </label>
</div>

<div class="field">
    <label for="">Additional Instructions</label>
    <textarea name=""></textarea>
</div>
