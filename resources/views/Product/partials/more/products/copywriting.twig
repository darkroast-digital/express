<!-- End Details -->

<div class="field">
    <label for="title">What is the the title for this piece? <small>(optional)</small></label>
    <input type="text" name="title">            
</div>

<div class="field">
    <label for="keywords">What keywords should be used? <small>(optional)</small></label>
    <input type="text" name="keywords">            
</div>

<div class="field is-inline">
    <label>Word Count</label>
    <div>
        <label class="radio"><input type="radio" name="option[0]length" value="200-300"><span class="radio-button"></span> 200 - 300 Words</label>
        <label class="radio"><input type="radio" name="option[0]length" value="300-500"><span class="radio-button"></span> 300 - 500 Words (+$54)</label>
        <label class="radio"><input type="radio" name="option[0]length" value="500-800"><span class="radio-button"></span> 500 - 800 Words (+$110)</label>
    </div>
</div>

<div class="field is-inline">
    <label>What is the copy for?</label>
    <div>
        <label><input type="checkbox" name="copy-for[]" value="Blog">Blog</label>
        <label><input type="checkbox" name="copy-for[]" value="SEO Article">SEO Article</label>
        <label><input type="checkbox" name="copy-for[]" value="Website Content">Website Content</label>
        <label><input type="checkbox" name="copy-for[]" value="Marketing Material">Marketing Material</label>
        <label><input type="checkbox" name="copy-for[]" value="Video Script">Video Script</label>
        <label><input type="checkbox" name="copy-for[]" value="Product Description">Product Description</label>
        <label><input type="checkbox" name="copy-for[]" value="Other">Other</label>
    </div>
</div>
