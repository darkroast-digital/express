{% extends 'layouts/app.twig' %}
{% block pageclass %}{% endblock %}
{% block title %}index{% endblock %}

{% block content %}
    
    <div class="order-overview column-8">
        <h6>Cart</h6>
        <hr>
        <table>
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr>
                        <td>{{ product.name }}</td>
                        <td>${{ product.price | number_format(2) }}</td>
                        <td>1</td>
                        <td>
                            <a href="#0">
                                <svg width="24" height="24" viewBox="0 0 24 24">
                                    <g class="icon" fill="currentColor">
                                        <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"></path>
                                    </g>
                                </svg>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    
    <div class="order-subtotal column-4">
        <h6>Order Summary</h6>
        <hr>
        <table>
            <tr>
                <td>Subtotal: </td>
                <td>${{ basket.subTotal | number_format(2) }}</td>
            </tr>
            <tr>
                <td><strong>Total: </strong></td>
                <td>${{ basket.subTotal | number_format(2) }}</td>
            </tr>
        </table>
        <a href="{{ path_for('checkout') }}" class="button">Checkout</a>
    </div>

{% endblock %}
